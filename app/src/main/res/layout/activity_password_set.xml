<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundpassword"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <com.takwolf.android.lock9.Lock9View
        android:id="@+id/SetLock_9_view"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:lock9_lineColor="@color/white"
        app:lock9_lineWidth="3dp"
        app:lock9_nodeOnSrc="@drawable/lock_9_view_node_highlighted"
        app:lock9_nodeSrc="@drawable/lock_9_view_node_normal" />


</LinearLayout>
