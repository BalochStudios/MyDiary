<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#04104E"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#00000000"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:theme="@style/ThemeOverlay.AppCompat.Dark" >

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        tools:context=".SettingsActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customize"
            android:textColor="#BEFFFFFF"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/rlModeStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/ibMode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#04104E"
                android:src="@drawable/emoticon"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ibMode"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Mode Style"
                android:textColor="#E4FFFFFF"
                android:textSize="18sp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlStickerMall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/ibStickerMall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#04104E"
                android:src="@drawable/emoticon"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ibStickerMall"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Sticker Mall"
                android:textColor="#E4FFFFFF"
                android:textSize="18sp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/ibTag"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#04104E"
                android:src="@drawable/tags"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ibTag"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Tags"
                android:textColor="#E4FFFFFF"
                android:textSize="18sp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/ibNotification"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#04104E"
                android:src="@drawable/notification"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ibNotification"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Notification"
                android:textColor="#E4FFFFFF"
                android:textSize="18sp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDiaryLock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/ibDiaryLock"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#04104E"
                android:src="@drawable/lock"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ibDiaryLock"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Diary Lock"
                android:textColor="#E4FFFFFF"
                android:textSize="18sp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDayOfWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/ibDayOfWeek"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#04104E"
                android:src="@drawable/ic_baseline_date_range_24"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvDayOfWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ibDayOfWeek"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="First day of the week"
                android:textColor="#E4FFFFFF"
                android:textSize="18sp"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDayOfWeek"
                android:layout_toEndOf="@id/ibDayOfWeek"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Auto"
                android:textColor="#BEFFFFFF"
                android:textSize="14sp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDateFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/ibDateFormat"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#04104E"
                android:src="@drawable/calendar_clock"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tvDateFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ibDateFormat"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Diary Date Format"
                android:textColor="#E4FFFFFF"
                android:textSize="18sp"

                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDateFormat"
                android:layout_toEndOf="@id/ibDateFormat"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Date"
                android:textColor="#BEFFFFFF"
                android:textSize="14sp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlTimeFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/ibTimeFormat"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#04104E"
                android:src="@drawable/calendar_clock"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ibTimeFormat"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Time Format"
                android:textColor="#E4FFFFFF"
                android:textSize="18sp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlSkipMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/ibSkipMode"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#04104E"
                android:src="@drawable/emoticon"
                app:tint="@color/white" />


            <TextView
                android:id="@+id/tvSkipMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ibSkipMode"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Skip Mode Selection Page"
                android:textColor="#E4FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSkipMode"
                android:layout_toStartOf="@id/swSkipMode"
                android:layout_toEndOf="@id/ibSkipMode"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="After enable , it will not display the mode selection page"
                android:textColor="#BEFFFFFF"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/swSkipMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:buttonTint="@color/white"
                android:checked="false"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="12dp"
            android:background="#4364B5F6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="About"
            android:textColor="#BEFFFFFF"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/rlRateUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/ibRateUs"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#04104E"
                android:src="@drawable/ic_baseline_star_rate_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ibRateUs"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Rate Us"
                android:textColor="#E4FFFFFF"
                android:textSize="18sp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlFeedBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/ibFeedBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#04104E"
                android:src="@drawable/ic_baseline_feedback_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ibFeedBack"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="FeeDBack"
                android:textColor="#E4FFFFFF"
                android:textSize="18sp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/ibPrivacyPolicy"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#04104E"
                android:src="@drawable/lock"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ibPrivacyPolicy"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Privacy Policy"
                android:textColor="#E4FFFFFF"
                android:textSize="18sp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/ibLanguage"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#04104E"
                android:src="@drawable/ic_baseline_language_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ibLanguage"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Language"
                android:textColor="#E4FFFFFF"
                android:textSize="18sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Version:1.02.54.1156"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>
    </LinearLayout>
</ScrollView>