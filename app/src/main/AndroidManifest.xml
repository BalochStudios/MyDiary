<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.muaz.mydiary">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyDiary">
        <activity
            android:name=".ui.others.ThemeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.diary.EditDiaryActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".ui.diary.ImagesDisplayActivity"
            android:exported="true" />
        <activity
            android:name=".ui.diary.AddDiaryActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".ui.lockscreen.LockActivity"
            android:exported="true"
            android:theme="@style/Theme.MyDiary.NoActionBar" />
        <activity android:name=".ui.lockscreen.PasswordSetActivity"  android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ui.lockscreen.PasswordActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.lockscreen.PasswordRecoveryActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.lockscreen.PasswordRecoverSetActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.diary.DiaryDisplayActivity" />
        <activity android:name=".ui.others.FAQActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.others.SettingsActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.others.TagActivity" android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.others.WebActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.others.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyDiary.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>